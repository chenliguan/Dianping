<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的"
            android:padding="@dimen/normal_space"
            android:textSize="@dimen/title_text_size"
            android:background="@color/white"
            android:gravity="center_horizontal"/>
        <RelativeLayout 
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_space"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp">
            <ImageView 
                android:id="@+id/my_index_login_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/portrait_def"
                android:scaleType="centerInside"
                android:contentDescription="@null"/>
            <TextView 
                android:id="@+id/my_index_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/my_index_login_image"
                android:text="点击登录"
                android:textSize="@dimen/text_size_defalut"
                android:paddingLeft="@dimen/little_space"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/arrow_normal"/>
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/normal_space">
            <TextView 
                android:id="@+id/my_index_nav_dianping"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:drawableTop="@mipmap/my_dianping_user_icon_normal"
                android:text="我的点评"/>
            <TextView 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/normal_bg_color"/>
             <TextView 
                android:id="@+id/my_index_nav_collect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:drawableTop="@mipmap/my_collect_user_icon_normal"
                android:text="我的点评"/>
            <TextView 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/normal_bg_color"/>
             <TextView 
                android:id="@+id/my_index_nav_coupon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:drawableTop="@mipmap/my_coupon_user_icon_normal"
                android:text="我的点评"/>
        </LinearLayout>
        <TextView 
            android:id="@+id/my_index_item_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="我的订单"
            android:textSize="@dimen/text_size_defalut"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawableLeft="@mipmap/my_order_user_icon_normal"
            android:drawableRight="@mipmap/arrow_normal"
            android:background="@color/white"
            android:drawablePadding="@dimen/normal_space"
            />
         <TextView 
            android:id="@+id/my_index_item_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:text="我的钱包"
            android:textSize="@dimen/text_size_defalut"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawablePadding="@dimen/normal_space"
            android:drawableLeft="@mipmap/my_wallet_user_icon_normal"
            android:background="@color/white"
            android:drawableRight="@mipmap/arrow_normal"/>
        <TextView 
            android:id="@+id/my_index_item_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="待点评"
            android:textSize="@dimen/text_size_defalut"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawablePadding="@dimen/normal_space"
            android:drawableLeft="@mipmap/my_review_user_icon_normal"
            android:background="@color/white"
            android:drawableRight="@mipmap/arrow_normal"/>
        <TextView 
            android:id="@+id/my_index_item_day_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:layout_marginBottom="1px"
            android:text="每日推荐"
            android:textSize="@dimen/text_size_defalut"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawablePadding="@dimen/normal_space"
            android:drawableLeft="@mipmap/my_day_recommend_user_icon_normal"
            android:background="@color/white"
            android:drawableRight="@mipmap/arrow_normal"/>
        <TextView 
            android:id="@+id/my_index_item_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最近浏览"
            android:textSize="@dimen/text_size_defalut"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawablePadding="@dimen/normal_space"
            android:drawableLeft="@mipmap/my_history_user_icon_normal"
            android:background="@color/white"
            android:drawableRight="@mipmap/arrow_normal"/>
        <TextView 
            android:id="@+id/my_index_item_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="设置"
            android:textSize="@dimen/text_size_defalut"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawablePadding="@dimen/normal_space"
            android:drawableLeft="@mipmap/my_setting_user_icon_normal"
            android:background="@color/white"
            android:drawableRight="@mipmap/arrow_normal"
            android:layout_marginBottom="40dp"/>
    </LinearLayout>
    

</ScrollView>
